package manager;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;
import java.sql.Timestamp;
import java.util.ArrayList;
import java.util.List;

import DTO.MembersDTO;

public class MembersDAO {

	public Connection getConnection() throws Exception {
		String url="jdbc:oracle:thin:@localhost:1521:xe";
		String id="kh";
		String pw="kh";

		Connection con = DriverManager.getConnection(url,id,pw);

		return con;
	}
	public int insert(MembersDTO dto) throws Exception {

		try(Connection con = this.getConnection();
				Statement stat = con.createStatement();){
			String sql = "INSERT INTO MEMBERS VALUES('"+dto.getId()+"','"+dto.getPw()+"','"+dto.getName()+"','"+dto.getContact()+"', systimestamp)";
			int result = stat.executeUpdate(sql);
			con.commit();
			return result;
		}
	}

	public List<MembersDTO> login_id(String id) throws Exception, Exception {
		try(Connection con = this.getConnection();
				Statement stat = con.createStatement();){
			String sql="SELECT * FROM MEMBERS WHERE id='"+id+"'";
			ResultSet rs = stat.executeQuery(sql);
			
			List<MembersDTO> result = new ArrayList<MembersDTO>();
			
			return result;
		}
	}
	public List<MembersDTO> login_pw(String pw) throws Exception, Exception {
		try(Connection con = this.getConnection();
				Statement stat = con.createStatement();){
			String sql="SELECT * FROM MEMBERS WHERE id='"+pw+"'";
			ResultSet rs = stat.executeQuery(sql);
			
			List<MembersDTO> result = new ArrayList<MembersDTO>();
			
			return result;
		}
	}
	
	
	

}
